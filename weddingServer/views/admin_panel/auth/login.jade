extends ../includes/admin_layout
block rightSidebar
    .col-md-8.offset-md-2
        form.form-signin(action="#{siteConfig.base_url}auth/checklogin.html",method="post")
            h1.h3.mb-3.font-weight-normal Please sign in
            .form-group       
                input#email.form-control(type='email', placeholder='Email address', required='', autofocus='')
            .form-group       
                input#password.form-control(type='password', placeholder='Password', required='')
            .form-group       
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
